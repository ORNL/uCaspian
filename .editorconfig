# EditorConfig: https://editorconfig.org/

# top-most EditorConfig file
root = true

# All (Defaults)
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# SystemVerilog/Verilog
[*.{sv,svh,v,vh}]
indent_style = space
indent_size = 2

# C++
[*.{cpp,hpp}]
indent_style = space
indent_size = 4

# Python
[*.py]
indent_style = space
indent_size = 4

# Shell Script
[*.sh]
indent_style = space
indent_size = 4
